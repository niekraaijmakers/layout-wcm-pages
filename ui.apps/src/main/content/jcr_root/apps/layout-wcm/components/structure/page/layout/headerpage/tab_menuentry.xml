<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          cq:showOnCreate="{Boolean}true"
        jcr:primaryType="nt:unstructured"
        jcr:title="Menu Item Settings"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
    <items jcr:primaryType="nt:unstructured">
        <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <menuPageTargetPath
                        cq:showOnCreate="{Boolean}true"
                        jcr:primaryType="nt:unstructured"
                        rootPath="/content"
                        fieldDescription="Please select or enter a target where this entry should navigate to on click."
                        fieldLabel="Target page"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        name="./menuPageTargetPath"/>

                <templates
                        cq:showOnCreate="{Boolean}false"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Templates Settings"
                        sling:resourceType="granite/ui/components/foundation/form/fieldset">
                    <items jcr:primaryType="nt:unstructured">
                        <allowedtemplates
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                class="foundation-layout-util-maximized-alt"
                                fieldDescription="Click 'Add Field' to add a template or a list of templates to be allowed as child pages. Each value in the list must be an absolute path to a template or use '/.*' to allow all templates below this path."
                                fieldLabel="Allowed Templates"
                                renderReadOnly="{Boolean}true">
                            <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                    fieldLabel="Select User Group"
                                    name="./showForUserGroupsOnly">
                                <items jcr:primaryType="nt:unstructured">
                                    <select
                                            jcr:primaryType="nt:unstructured"
                                            text="Select User Group"/>
                                    <administrators
                                            jcr:primaryType="nt:unstructured"
                                            text="Administrators"
                                            value="administrators"/>
                                    <editors
                                            jcr:primaryType="nt:unstructured"
                                            text="Editors"
                                            value="editors"/>
                                </items>
                            </field>
                        </allowedtemplates>
                    </items>
                </templates>


            </items>
        </column>
    </items>
</jcr:root>